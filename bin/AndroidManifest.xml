            android:name="com.example.facechase_project.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.facechase_project.MainCameraActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_main_camera" >
            
        </activity>
        <activity
            android:name="com.example.facechase_project.OptionsActivity"
            android:label="@string/title_activity_options" >
