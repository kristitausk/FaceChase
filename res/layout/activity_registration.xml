<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15sp"
    android:paddingRight="15sp"
    android:paddingTop="15sp"
    android:paddingBottom="15sp"
    android:background="@drawable/background">
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" >
    </View>
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Name:" />
    
    <EditText android:id="@+id/register_name_message"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:background="@drawable/box" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" >
    </View>
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Email:" />
    
    <EditText android:id="@+id/register_email_message"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:background="@drawable/box" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" >
    </View>
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Password:" />
    
    <EditText android:id="@+id/register_password_message"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:background="@drawable/box" />
        
    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" >
    </View>
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Confirm Password:" />
    
    <EditText android:id="@+id/register_password2_message"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:background="@drawable/box" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" >
    </View>
    
    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button"
        android:text="Continue" 
        android:onClick="continueRegistration"/>

</LinearLayout>