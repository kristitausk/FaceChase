        </activity>
        <activity
            android:name="com.example.facechase_project.TargetsActivity"
            android:label="@string/title_activity_targets" >
        </activity>
        <activity
            android:name="com.example.facechase_project.MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
