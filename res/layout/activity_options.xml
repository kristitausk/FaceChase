<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15sp"
    android:paddingRight="15sp"
    android:paddingTop="15sp"
    android:paddingBottom="15sp"
    android:background="@drawable/background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="40sp"
        android:text="Main Menu" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" >
    </View>
    
    <Button
        android:layout_width="130sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button"
        android:text="Go to Kill Menu" 
        android:onClick="goToMainCamera"/>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" >
    </View>

    
    <Button
        android:layout_width="130sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button"
        android:text="Leaderboard" 
        android:onClick="goToLeaderboard"/>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" >
    </View>
    
    <Button
        android:layout_width="130sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button"
        android:text="Targets" 
        android:onClick="goToTargets"/>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" >
    </View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Notifications:" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" >
    </View>
    
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="2 minutes ago:" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="You have successfully killed Lee Gross and earned 1 point." />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" >
    </View>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="1 hour ago:" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="You have been killed by Miriam Prosnitz and are inactive for 20 minutes." />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" >
    </View>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="4 hours ago:" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Your attempted kill of Kristi Tausk was unsuccessful." />
    
        <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" >
    </View>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="6 hours ago:" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="You have successfully killed Lee Gross and earned 1 point." />
    
        <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" >
    </View>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="10 hours ago:" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="You have successfully killed Lee Gross and earned 1 point." />
    </LinearLayout>
    </ScrollView>

</LinearLayout>